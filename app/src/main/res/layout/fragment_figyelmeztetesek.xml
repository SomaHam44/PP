<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FigyelmeztetesekFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/figyelmeztetesek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:text="Figyelmeztetések"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/figyelmeztetesekLista"
        android:layout_width="328dp"
        android:layout_height="293dp"
        android:layout_marginTop="16dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="@+id/figyelmeztetesek"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="@+id/figyelmeztetesek"
        app:layout_constraintTop_toBottomOf="@+id/figyelmeztetesek" />

    <Button
        android:id="@+id/btnFigyelmeztetesekVissza"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Vissza"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/figyelmeztetesekLista"
        app:layout_constraintTop_toBottomOf="@+id/figyelmeztetesekLista" />

    <Button
        android:id="@+id/btnGyogyszertarKeresohoz"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Gyógyszertár keresése"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/btnFigyelmeztetesekVissza"
        app:layout_constraintEnd_toEndOf="@+id/figyelmeztetesekLista"
        app:layout_constraintTop_toTopOf="@+id/btnFigyelmeztetesekVissza"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>