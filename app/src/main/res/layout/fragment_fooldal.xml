<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FooldalFragment">

    <TextView
        android:id="@+id/alkalmazasNeve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/pirulapolc"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bevezetoSzoveg"
        android:layout_width="293dp"
        android:layout_height="82dp"
        android:layout_marginTop="80dp"
        android:text="Gyógyszerkészlet nyilvántartó"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/alkalmazasNeve"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/alkalmazasNeve"
        app:layout_constraintTop_toBottomOf="@id/alkalmazasNeve" />

    <Button
        android:id="@+id/btnIndit"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:text="Indítás"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/alkalmazasNeve"
        app:layout_constraintStart_toStartOf="@+id/alkalmazasNeve"
        app:layout_constraintTop_toBottomOf="@+id/alkalmazasNeve" />


</androidx.constraintlayout.widget.ConstraintLayout>