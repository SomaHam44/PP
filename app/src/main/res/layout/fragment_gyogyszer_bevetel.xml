<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GyogyszerBevetelFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/CimText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Gyógyszer bevétel"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DatumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dátum:"
        app:layout_constraintTop_toTopOf="@+id/ListaBtn"
        tools:layout_editor_absoluteX="47dp" />

    <TextView
        android:id="@+id/IdopontText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Időpont:"
        app:layout_constraintBottom_toBottomOf="@+id/ListaBtn"
        tools:layout_editor_absoluteX="46dp" />

    <Button
        android:id="@+id/ListaBtn"
        android:layout_width="98dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:text="Lista"
        app:layout_constraintTop_toBottomOf="@+id/CimText"
        tools:layout_editor_absoluteX="201dp" />

</androidx.constraintlayout.widget.ConstraintLayout>